<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PagerTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="LoginTextStyle">
        <item name="android:textColor">@color/color_text_login</item>
        <item name="android:textSize">@dimen/dimen_login_item_txt</item>
        <item name="android:drawablePadding">10px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginEditStyle">
        <item name="android:layout_width">523px</item>
        <item name="android:background">@drawable/selector_edit_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">80px</item>
    </style>

    <style name="LoginEditLabel">
        <item name="android:textColor">@color/color_text_login</item>
        <item name="android:layout_width">119px</item>
        <item name="android:textSize">22px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">80px</item>
    </style>

    <style name="LoginEdit">
        <item name="android:textColor">@color/color_text_login</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">30px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_height">80px</item>
    </style>

    <style name="JumpBtnStyle">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">48px</item>
        <item name="android:text">@string/string_jump</item>
        <item name="android:background">@drawable/selector_btn_jump</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@color/selector_btn_text</item>
    </style>
</resources>